<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::admin.admin_themes') }}</h4>
</div>

<div class="modal-body">
    <ul class="nav nav-stacked">
        {% for theme in themes %}
            <li>
                <a href="{{ url_to('admin/appearance/activate/' ~ theme.namespace) }}">
                    <strong>{{ trans(theme.name) }}</strong>
                    <br>
                    <small>{{ trans(theme.description) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
